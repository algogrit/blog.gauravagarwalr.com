---
import { getCollection } from 'astro:content';

import Base from '../../layouts/Base.astro';
import PostIndex from '../../components/pages/PostIndex';

const posts = (await getCollection('posts')).sort(
	(a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);
---

<Base>
	<section class="bg-amber-50 border-b border-amber-200 dark:border-gray-800 dark:bg-gray-900/50 py-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
					<h1 class="text-4xl md:text-5xl font-bold mb-4">All Articles</h1>
					<p class="text-xl opacity-90">Essays, deep dives, and technical explorations across programming and systems.</p>
			</div>
	</section>
	<PostIndex posts={posts} client:load/>
</Base>
