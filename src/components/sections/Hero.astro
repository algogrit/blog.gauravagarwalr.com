---
import HomeSearch from "../tags/HomeSearch";
---

<section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-linear-to-br from-orange-500/10 via-yellow-500/10 to-transparent dark:from-orange-500/5 dark:via-yellow-500/5"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="text-center mb-8">
            <h1 class="text-5xl/15 md:text-6xl/18 font-bold mb-6 bg-linear-to-r from-orange-500 via-yellow-500 to-orange-500 bg-clip-text text-transparent">
                Engineering Insights & Technical Deep Dives
            </h1>
            <p class="text-xl md:text-2xl mb-8 text-gray-600 dark:text-gray-300">
                Exploring programming languages, systems design, and software craftsmanship
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/posts.html" class="px-8 py-3 bg-linear-to-r from-orange-500 to-yellow-500 text-white font-semibold rounded-lg hover:from-orange-600 hover:to-yellow-600 shadow-lg">
                    Browse All Articles
                </a>
                <a href="#newsletter" class="px-8 py-3 border-2 border-orange-500 text-orange-500 dark:text-orange-400 hover:bg-orange-50 dark:hover:bg-orange-500/10 font-semibold rounded-lg">
                    Subscribe to Newsletter
                </a>
            </div>
        </div>

        <!-- Search Bar -->
        <HomeSearch client:load/>
    </div>
</section>
